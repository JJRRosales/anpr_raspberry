{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-manual-debug",
      "displayName": "Linux Laptop Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "rpi-release",
      "displayName": "Raspberry Pi 4 Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/rpi-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "arm64-linux-rpi",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain-rpi4.cmake",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/deploy"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "laptop-debug",
      "configurePreset": "linux-manual-debug"
    },
    {
      "name": "rpi-build",
      "configurePreset": "rpi-release"
    }
  ]
}